<!--This is the new form for making comments-->
<% include ../partials/heading %>

<div class="container">
    <div class="row" style="width:30%; margin: 0 auto;">
        <h1 style="text-align:center">Edit Comment</h1>
        <form action="/campground/<%= campground._id %>/comments/<%= comment._id%>?_method=PUT" method="POST" style="margin: 25px auto">
            <div class="form-group">
               <input type="text" name="comment[text]" class="form-control" value="<%= comment.text%>"> 
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-lg btn-block">
            </div>
        </form>
        <a href="/campground/<%= campground._id%>">Go Back</a>
    </div>
    
    
</div>


<% include ../partials/footer %>