<% include ../partials/heading %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp !</h1>
            <p>YelpCamp make your comfort camping a fullfilling experience</p>
            <p><a class="btn btn-primary btn-lg" href="/campground/new">Add Comfort Camp</a><br></p>
        </div>
    </header>
</div>

<div class="container">
    <div class="row" style="display:flex; flex-wrap:wrap">
        <% campgrounds.forEach(function(campgrounds){ %>
            <div class="col-md-3 col-sm-6" >
              <div class="thumbnail">
                  <img src="<%= campgrounds.image%>">
                  <div class="caption text-center">
                      <h3 style="text-transform: uppercase"> <%= campgrounds.name%></h3>
                      <p><%= campgrounds.description.substring(0, 100) %>...</p>
                      <a href="/campground/<%= campgrounds._id %>" class="btn btn-primary">More info</a>
                  </div>
              </div>
           </div>
        <% }) %>
    </div>
</div>

<div class="container">
    <div class="row text-center">
        <% if (pages && pages > 0) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
            <li class="disabled"><a>First</a></li>
            <% } else { %>
            <li><a href="/campground">First</a></li>
            <% } %>
     
            <% if (current == 1) { %>
            <li class="disabled"><a>«</a></li>
            <% } else { %>
            <li><a href="/campground?page=<%= Number(current) - 1 %>">«</a></li>
            <% } %>
     
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a><%= i %></a></li>
            <% } else { %>
            <li><a href="/campground?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="disabled"><a>»</a></li>
            <% } else { %>
            <li><a href="/campground?page=<%= Number(current) + 1 %>">»</a></li>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
            <% } else { %>
            <li><a href="/campground?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </div>
</div>

<% include ../partials/footer %>