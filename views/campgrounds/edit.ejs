<% include ../partials/heading %>

<div class="container">
    <div class="row" style="width:30%; margin: 0 auto;">
        <h1 style="text-align:center">Add new Campsite</h1>
        <form action="/campground/<%= campground._id%>?_method=PUT" method="POST" style="margin: 25px auto">
            <div class="form-group">
               <input type="text"  name="campground[name]" class="form-control" value="<%= campground.name %>"> 
            </div>
            <div class="form-group">
               <input type="number"  name="campground[price]" class="form-control" value="<%= campground.price %>" min="0.01" step="0.01"> 
            </div>
            <div class="form-group">
                <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <textarea class="form-control" style="resize:vertical" name="campground[description]"><%= campground.description %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update</button>
            </div>
        </form>
        <a href="/campground">Go Back</a>
    </div>
    
</div>

<% include ../partials/footer %>