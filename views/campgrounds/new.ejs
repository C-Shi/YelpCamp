<% include ../partials/heading %>

<div class="container">
    <div class="row" style="width:30%; margin: 0 auto;">
        <h1 style="text-align:center">Add new Campsite</h1>
        <form action="/campground" method="POST" style="margin: 25px auto">
            <div class="form-group">
               <input type="text" placeholder="campground name" name="name" class="form-control"> 
            </div>
            <div class="form-group">
               <input type="number" placeholder="price" min="0.01" set="0.01" name="price" class="form-control"> 
            </div>
            <div class="form-group">
                <input type="text" placeholder="image url" name="image" class="form-control">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="description">Add description</textarea>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-lg btn-block">
            </div>
        </form>
        <a href="/campground">Go Back</a>
    </div>
    
</div>

<% include ../partials/footer %>